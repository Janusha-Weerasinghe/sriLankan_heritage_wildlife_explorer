
import SwiftUI

struct MainView: View {
    @State private var selectedTab = 0

    var body: some View {
        VStack(spacing: 0) {
            TabView(selection: $selectedTab) {
                NavigationView {
                    HomeView()
                        .navigationBarTitle("Explore", displayMode: .large)
                }
                .tag(0)

                NavigationView {
                    Text("Map")
                        .navigationBarTitle("Map", displayMode: .large)
                }
                .tag(1)

                NavigationView {
                    Text("Favourite")
                        .navigationBarTitle("Favourite", displayMode: .large)
                }
                .tag(2)

                NavigationView {
                    Text("Profile View")
                        .navigationBarTitle("Profile", displayMode: .large)
                }
                .tag(3)
            }
            .tabViewStyle(PageTabViewStyle(indexDisplayMode: .never)) // Hide default tab bar

            CustomTabBar(selectedTab: $selectedTab)
        }
    }
}

struct MainView_Previews: PreviewProvider {
    static var previews: some View {
        MainView()
    }
}
